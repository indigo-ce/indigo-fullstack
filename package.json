{
  "name": "indigo-stack-ce",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro check --minimumSeverity warning && astro dev",
    "build": "pnpm cf-types && astro build",
    "preview": "astro build && wrangler dev",
    "astro": "astro",
    "add-component": "pnpm dlx shadcn-svelte@next add",
    "preview-email": "email dev --dir src/components/email",
    "d1": "wrangler d1",
    "cf-types": "wrangler types",
    "db:generate": "drizzle-kit generate",
    "db:init:local": "wrangler d1 execute indigo-ce --local --command 'SELECT COUNT(*)'",
    "db:init:prod": "wrangler d1 create indigo-ce",
    "d1:migrate:local": "wrangler d1 migrations apply indigo-ce --local",
    "d1:migrate-dry:local": "wrangler d1 migrations list indigo-ce --local",
    "d1:migrate:prod": "wrangler d1 migrations apply indigo-ce --remote",
    "d1:migrate-dry:prod": "wrangler d1 migrations list indigo-ce --remote",
    "d1:studio:local": "drizzle-kit studio",
    "better-auth:schema": "pnpm dlx @better-auth/cli generate --config src/lib/auth-config.ts"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.0",
    "@astrojs/node": "^9.3.0",
    "@astrojs/react": "^4.3.0",
    "@astrojs/svelte": "^7.1.0",
    "@libsql/client": "^0.15.9",
    "@lucide/svelte": "^0.525.0",
    "@react-email/components": "^0.1.1",
    "@react-email/render": "^1.1.3",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "astro": "^5.11.0",
    "better-auth": "^1.2.12",
    "bits-ui": "^2.8.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.4",
    "jose": "^6.0.11",
    "nodemailer": "^7.0.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "resend": "^4.6.0",
    "svelte": "^5.35.4",
    "svelte-hero-icons": "^5.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@cloudflare/workers-types": "^4.20250708.0",
    "@cretezy/cloudflare-d1-backup": "^0.2.1",
    "@types/node": "^24.0.10",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "dotenv": "^17.1.0",
    "drizzle-kit": "^0.31.4",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "react-email": "^4.0.17",
    "wrangler": "^4.24.0"
  }
}
