{
  "name": "indigo-stack-ce",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "pnpm check && astro dev",
    "check": "astro check --minimumSeverity warning",
    "build": "pnpm cf-types && astro build",
    "preview": "astro build && wrangler dev",
    "astro": "astro",
    "add-component": "pnpm dlx shadcn-svelte@next add",
    "preview-email": "email dev --dir src/components/email",
    "d1": "wrangler d1",
    "cf-types": "wrangler types",
    "db:generate": "drizzle-kit generate",
    "db:init:local": "wrangler d1 execute indigo-ce --local --command 'SELECT COUNT(*)'",
    "db:init:prod": "wrangler d1 create indigo-ce",
    "d1:migrate:local": "wrangler d1 migrations apply indigo-ce --local",
    "d1:migrate-dry:local": "wrangler d1 migrations list indigo-ce --local",
    "d1:migrate:prod": "wrangler d1 migrations apply indigo-ce --remote",
    "d1:migrate-dry:prod": "wrangler d1 migrations list indigo-ce --remote",
    "d1:studio:local": "drizzle-kit studio",
    "better-auth:schema": "pnpm dlx @better-auth/cli generate --config src/lib/auth-config.ts"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.7",
    "@astrojs/node": "^9.4.3",
    "@astrojs/react": "^4.3.0",
    "@astrojs/svelte": "^7.1.0",
    "@libsql/client": "^0.15.14",
    "@lucide/svelte": "^0.542.0",
    "@react-email/components": "^0.5.1",
    "@react-email/render": "^1.2.1",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.12",
    "astro": "^5.13.5",
    "better-auth": "^1.3.7",
    "bits-ui": "^2.9.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.5",
    "jose": "^6.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "resend": "^6.0.2",
    "svelte": "^5.38.6",
    "svelte-hero-icons": "^5.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.0",
    "tailwindcss": "^4.1.12",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@cloudflare/workers-types": "^4.20250831.0",
    "@cretezy/cloudflare-d1-backup": "^0.2.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "drizzle-kit": "^0.31.4",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "react-email": "^4.2.8",
    "wrangler": "^4.33.1"
  }
}
