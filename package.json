{
  "name": "indigo-stack-ce",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "pnpm check && astro dev",
    "check": "astro check --minimumSeverity warning",
    "build": "pnpm cf-types && astro build",
    "preview": "astro build && wrangler dev",
    "astro": "astro",
    "add-component": "pnpm dlx shadcn@latest add",
    "preview-email": "email dev --dir src/components/email",
    "d1": "wrangler d1",
    "cf-types": "wrangler types",
    "db:generate": "drizzle-kit generate",
    "db:init:local": "wrangler d1 execute indigo-ce --local --command 'SELECT COUNT(*)'",
    "db:init:prod": "wrangler d1 create indigo-ce",
    "d1:migrate:local": "wrangler d1 migrations apply indigo-ce --local",
    "d1:migrate-dry:local": "wrangler d1 migrations list indigo-ce --local",
    "d1:migrate:prod": "wrangler d1 migrations apply indigo-ce --remote",
    "d1:migrate-dry:prod": "wrangler d1 migrations list indigo-ce --remote",
    "d1:studio:local": "drizzle-kit studio",
    "better-auth:schema": "pnpm dlx @better-auth/cli generate --config src/lib/auth-config.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.8",
    "@astrojs/node": "^9.4.3",
    "@astrojs/react": "^4.3.1",
    "@hookform/resolvers": "^5.2.2",
    "@libsql/client": "^0.15.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-email/components": "^0.5.3",
    "@react-email/render": "^1.2.3",
    "@tailwindcss/typography": "^0.5.18",
    "@tailwindcss/vite": "^4.1.13",
    "astro": "^5.13.9",
    "better-auth": "^1.3.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.8",
    "jose": "^6.1.0",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.63.0",
    "resend": "^6.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@cloudflare/vitest-pool-workers": "^0.9.3",
    "@cloudflare/workers-types": "^4.20250921.0",
    "@cretezy/cloudflare-d1-backup": "^0.2.1",
    "@internationalized/date": "^3.9.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitest/ui": "3.2.4",
    "drizzle-kit": "^0.31.4",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "react-email": "^4.2.11",
    "tw-animate-css": "^1.4.0",
    "vitest": "~3.2.4",
    "wrangler": "^4.38.0"
  }
}
