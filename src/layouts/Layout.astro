---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import SetTheme from "@/components/SetTheme.astro";
import {getLocaleFromUrl} from "@/i18n/utils";
import "@/styles.css";

export interface Props {
  title?: string;
}

const {title = "Indigo CE"} = Astro.props;
const locale = getLocaleFromUrl(Astro.url.pathname);
---

<!doctype html>
<html lang={locale}>
  <head>
    <SetTheme />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script src="@/scripts/language-detection.js"></script>
  </head>
  <body>
    <Header pathname={Astro.url.pathname} />
    <main class="min-h-[80dvh] bg-white dark:bg-gray-900">
      <slot />
    </main>
    <Footer />
  </body>
</html>
